# Agentic AI Environment Variables

# MongoDB
MONGODB_URI=mongodb://localhost:27017/mentorship_platform

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Provider Configuration
LLM_PROVIDER=openai
# Options: 'openai' or 'claude'

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4-turbo-preview
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo

# Claude Configuration (if using Claude)
CLAUDE_API_KEY=your_claude_api_key_here
# Model will be: claude-3-5-sonnet-20241022

# Worker Configuration
WORKER_CONCURRENCY=2
# Number of concurrent jobs to process

# Scheduler Configuration
TIMEZONE=Asia/Kolkata
# Timezone for scheduled jobs

# Rate Limiting
RATE_LIMIT_HOURS=6
# Minimum hours between agent runs for same user (unless forced)

# Server Configuration
PORT=5002
NODE_ENV=development

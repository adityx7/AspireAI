# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/aspireai

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LLM Configuration (choose: openai or claude)
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here

# Worker Configuration
WORKER_CONCURRENCY=2
WORKER_RATE_LIMIT_PER_MIN=10

# Scheduler Configuration
SCHEDULER_TIMEZONE=Asia/Kolkata

# Job Rate Limiting (prevent too frequent jobs for same user)
JOB_RATE_LIMIT_HOURS=6

# Server Configuration
PORT=5002
NODE_ENV=development

# Feature Flags
USE_SEMESTER_ACADEMICS=true
